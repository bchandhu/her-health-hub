<hr>

<% if @latest_diagnostic %>
  <h2>Your Last Risk Level</h2>
  <p>
    <strong><%= @latest_diagnostic.risk_level %></strong><br>
    <%= link_to "View Details", diagnostic_path(@latest_diagnostic), class: "btn btn-sm btn-outline-primary" %>
  </p>
<% else %>
  <p>No diagnostics found. <%= link_to "Take One Now", new_diagnostic_path, class: "btn btn-primary" %></p>
<% end %>

<hr>

<h2>Recent Logs</h2>
<% if @recent_logs.any? %>
  <ul>
    <% @recent_logs.each do |log| %>
      <li><strong><%= log.date.strftime("%b %d") %></strong>: <%= log.note.truncate(60) %></li>
    <% end %>
  </ul>
  <%= link_to "View Full Calendar", logs_path, class: "btn btn-sm btn-secondary" %>
<% else %>
  <p>You haven't logged anything yet. <%= link_to "Add a Log", new_log_path, class: "btn btn-sm btn-primary" %></p>
<% end %>
