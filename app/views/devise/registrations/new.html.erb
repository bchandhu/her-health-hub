<div style="display: flex; justify-content: center; align-items: center; height: 80vh;">
  <div style="background-color: #ffffff; padding: 30px 40px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1); max-width: 400px; width: 100%;">
    
    <h2 style="text-align: center; margin-bottom: 25px;">ðŸŒ¸ Sign Up for HerHealth Hub ðŸŒ¸</h2>

    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { style: "display: flex; flex-direction: column; gap: 15px;" }) do |f| %>

      <div>
        <%= f.label :first_name, style: "display: block; font-weight: bold;" %>
        <%= f.text_field :first_name, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <div>
        <%= f.label :last_name, style: "display: block; font-weight: bold;" %>
        <%= f.text_field :last_name, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <div>
        <%= f.label :email, style: "display: block; font-weight: bold;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <div>
        <%= f.label :password, style: "display: block; font-weight: bold;" %>
        <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <div>
        <%= f.label :password_confirmation, style: "display: block; font-weight: bold;" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <div>
        <%= f.submit "Sign Up", style: "width: 100%; padding: 10px; background-color: #6f42c1; color: white; border: none; border-radius: 5px; font-weight: bold;" %>
      </div>

    <% end %>

    <div style="text-align: center; margin-top: 15px;">
      <%= link_to "Already have an account? Log In âž”", new_session_path(resource_name), style: "color: #6f42c1; font-weight: bold; text-decoration: none;" %>
    </div>

  </div>
</div>
