<div style="display: flex; justify-content: center; align-items: center; height: 80vh;">
  <div style="background-color: #ffffff; padding: 30px 40px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0,0,0,0.1); max-width: 400px; width: 100%;">
    
    <h2 style="text-align: center; margin-bottom: 25px;">ðŸŒ¸ Welcome Back to HerHealth Hub ðŸŒ¸</h2>

    <%= form_with(scope: resource_name, url: session_path(resource_name), html: { style: "display: flex; flex-direction: column; gap: 15px;" }) do |f| %>

      <div>
        <%= f.label :email, style: "display: block; font-weight: bold;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <div>
        <%= f.label :password, style: "display: block; font-weight: bold;" %>
        <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div style="font-size: 14px;">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log In", style: "width: 100%; padding: 10px; background-color: #6f42c1; color: white; border: none; border-radius: 5px; font-weight: bold;" %>
      </div>

    <% end %>

    <div style="text-align: center; margin-top: 15px;">
      <%= link_to "Forgot your password?", new_password_path(resource_name), style: "color: #6f42c1; font-weight: bold; text-decoration: none;" %><br>
      <%= link_to "Sign Up âž”", new_registration_path(resource_name), style: "color: #6f42c1; font-weight: bold; text-decoration: none; margin-top: 10px; display: inline-block;" %>
    </div>

  </div>
</div>
