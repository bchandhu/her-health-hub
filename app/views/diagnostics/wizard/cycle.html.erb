<div style="max-width: 800px; margin: auto; padding: 40px 20px; font-size: 18px;">
  <h2 style="font-size: 28px; font-weight: bold; margin-bottom: 30px; text-align: center;">Step 1 of 4: Your Cycle</h2>

  <%= form_with model: @diagnostic, url: wizard_path, method: :patch do |form| %>
    <div style="margin-bottom: 30px;">
      <%= form.label :irregular_periods, "Are your periods irregular?", style: "font-size: 20px; display: block; margin-bottom: 10px;" %>
      <%= form.select :irregular_periods, ["Yes", "No"], {}, style: "width: 100%; padding: 12px; font-size: 16px; border-radius: 8px; border: 1px solid #ccc;" %>
    </div>

    <div style="margin-bottom: 30px;">
      <%= form.label :cycle_length, "How long are your average cycles?", style: "font-size: 20px; display: block; margin-bottom: 10px;" %>
      <%= form.select :cycle_length, ["<21 days", "21–35 days", "35–60 days", "60+ days"], {}, style: "width: 100%; padding: 12px; font-size: 16px; border-radius: 8px; border: 1px solid #ccc;" %>
    </div>

    <div style="text-align: center;">
      <%= form.submit "Next ➡️", class: "btn btn-primary", style: "padding: 12px 30px; font-size: 18px;" %>
    </div>
  <% end %>
</div>
